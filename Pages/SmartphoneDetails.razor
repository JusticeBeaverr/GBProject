                                                            <!-- Sprawdź, czy Camera_back_max_frame_rate__fps nie jest null -->
                                                            <TableRow>
                                                                <TableRowHeader>Maksymalna liczba klatek na sekundę (tylny)</TableRowHeader>
                                                                <TableRowCell>@(smartphone.Data.Camera.Camera_back_max_frame_rate__fps != null ? smartphone.Data.Camera.Camera_back_max_frame_rate__fps.ToString() : "-")</TableRowCell>
                                                            </TableRow>
                                                            <!-- Sprawdź, czy Camera_back_number_of_lens_elements nie jest null -->
                                                            <TableRow>
                                                                <TableRowHeader>Liczba elementów soczewki (tylny)</TableRowHeader>
                                                                <TableRowCell>@(smartphone.Data.Camera.Camera_back_number_of_lens_elements != null ? smartphone.Data.Camera.Camera_back_number_of_lens_elements.ToString() : "-")</TableRowCell>
                                                            </TableRow>
                                                            <!-- Sprawdź, czy Camera_back_has_flash nie jest null -->
                                                            <TableRow>
                                                                <TableRowHeader>Lampa błyskowa (tylny)</TableRowHeader>
                                                                <TableRowCell>@(smartphone.Data.Camera.Camera_back_has_flash != null ? smartphone.Data.Camera.Camera_back_has_flash.ToString() : "-")</TableRowCell>
                                                            </TableRow>
                                                            <!-- Sprawdź, czy Camera_back_has_panorama nie jest null -->
                                                            <TableRow>
                                                                <TableRowHeader>Tryb panoramy (tylny)</TableRowHeader>
                                                                <TableRowCell>@(smartphone.Data.Camera.Camera_back_has_panorama != null ? smartphone.Data.Camera.Camera_back_has_panorama.ToString() : "-")</TableRowCell>
                                                            </TableRow>
                                                            <!-- Sprawdź, czy Camera_back_has_auto_focus nie jest null -->
                                                            <TableRow>
                                                                <TableRowHeader>Autofokus (tylny)</TableRowHeader>
                                                                <TableRowCell>@(smartphone.Data.Camera.Camera_back_has_auto_focus != null ? smartphone.Data.Camera.Camera_back_has_auto_focus.ToString() : "-")</TableRowCell>
                                                            </TableRow>
                                                            <!-- Sprawdź, czy Camera_back_has_geotagging nie jest null -->
                                                            <TableRow>
                                                                <TableRowHeader>Geotagowanie (tylny)</TableRowHeader>
                                                                <TableRowCell>@(smartphone.Data.Camera.Camera_back_has_geotagging != null ? smartphone.Data.Camera.Camera_back_has_geotagging.ToString() : "-")</TableRowCell>
                                                            </TableRow>
                                                            <!-- Sprawdź, czy Camera_back_has_night_mode nie jest null -->
                                                            <TableRow>
                                                                <TableRowHeader>Tryb nocny (tylny)</TableRowHeader>
                                                                <TableRowCell>@(smartphone.Data.Camera.Camera_back_has_night_mode != null ? smartphone.Data.Camera.Camera_back_has_night_mode.ToString() : "-")</TableRowCell>
                                                            </TableRow>
                                                            <!-- Sprawdź, czy Camera_back_has_time_lapse_modus nie jest null -->
                                                            <TableRow>
                                                                <TableRowHeader>Tryb time-lapse (tylny)</TableRowHeader>
                                                                <TableRowCell>@(smartphone.Data.Camera.Camera_back_has_time_lapse_modus != null ? smartphone.Data.Camera.Camera_back_has_time_lapse_modus.ToString() : "-")</TableRowCell>
                                                            </TableRow>
                                                            <!-- Sprawdź, czy Camera_back_has_video_stabilizer nie jest null -->
                                                            <TableRow>
                                                                <TableRowHeader>Stabilizację wideo (tylny)</TableRowHeader>
                                                                <TableRowCell>@(smartphone.Data.Camera.Camera_back_has_video_stabilizer != null ? smartphone.Data.Camera.Camera_back_has_video_stabilizer.ToString() : "-")</TableRowCell>
                                                            </TableRow>
                                                            <!-- Sprawdź, czy Camera_back_resolution nie jest null -->
                                                            <TableRow>
                                                                <TableRowHeader>Rozdzielczość (tylny)</TableRowHeader>
                                                                <TableRowCell>@(string.IsNullOrEmpty(smartphone.Data.Camera.Camera_back_resolution) ? "-" : smartphone.Data.Camera.Camera_back_resolution)</TableRowCell>
                                                            </TableRow>
                                                            <!-- Sprawdź, czy Camera_back_type_flash nie jest null -->
                                                            <TableRow>
                                                                <TableRowHeader>Typ lampy błyskowej (tylny)</TableRowHeader>
                                                                <TableRowCell>@(string.IsNullOrEmpty(smartphone.Data.Camera.Camera_back_type_flash) ? "-" : smartphone.Data.Camera.Camera_back_type_flash)</TableRowCell>
                                                            </TableRow>
                                                        </TableBody>
                                                    </Table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }


                                <!-- Wyświetlanie danych procesora -->
                                @if (smartphone.Data.Cpu != null)
                                {
                                    <div class="card custom-shadow">
                                        <div class="card-body d-flex flex-column justify-content-between h-100">
                                            <div class="d-flex align-items-center">
