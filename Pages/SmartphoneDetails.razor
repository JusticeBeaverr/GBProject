                                                            </TableRow>
                                                            <!-- Sprawdź, czy Mpn nie jest null -->
                                                            <TableRow>
                                                                <TableRowHeader>Mpn</TableRowHeader>
                                                                <TableRowCell>@(string.IsNullOrEmpty(smartphone.Data.General.Mpn) ? "-" : smartphone.Data.General.Mpn)</TableRowCell>
                                                            </TableRow>
                                                        </TableBody>
                                                    </Table>
                                                </div>
                                            </div>
