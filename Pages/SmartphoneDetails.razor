                                <!-- Wyświetlanie danych pomiarowych -->
                                @if (smartphone.Data.Measurements != null)
                                {
                                    <div class="card custom-shadow">
                                        <div class="card-body d-flex flex-column justify-content-between h-100">
                                            <div class="d-flex align-items-center">
                                                <div class="mr-3">
                                                </div>
                                                <div class="card-body">
                                                    <Table Striped>
                                                        <TableHeader>
