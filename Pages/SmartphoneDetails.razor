                                                            <TableRow>
                                                                <TableRowHeader>Liczba rdzeni</TableRowHeader>
                                                                <TableRowCell>@(smartphone.Data.Cpu.Number_of_cores != null ? smartphone.Data.Cpu.Number_of_cores.ToString() : "-")</TableRowCell>
                                                            </TableRow>
