                                                                <TableRowCell>@(string.IsNullOrEmpty(smartphone.Data.Design.Color) ? "-" : smartphone.Data.Design.Color)</TableRowCell>
                                                            </TableRow>
                                                            <!-- Sprawdź, czy Material nie jest null -->
                                                            <TableRow>
                                                                <TableRowHeader>Materiał</TableRowHeader>
                                                                <TableRowCell>@(string.IsNullOrEmpty(smartphone.Data.Design.Material) ? "-" : smartphone.Data.Design.Material)</TableRowCell>
                                                            </TableRow>
                                                        </TableBody>
                                                    </Table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }



                                <!-- Wyświetlanie danych wyświetlacza -->
                                @if (smartphone.Data.Display != null)
                                {
                                    <div class="card custom-shadow">
                                        <div class="card-body d-flex flex-column justify-content-between h-100">
                                            <div class="d-flex align-items-center">
                                                <div class="mr-3">
                                                </div>
                                                <div class="card-body">
                                                    <Table Striped>
                                                        <TableHeader>
                                                            <TableRow>
                                                                <TableHeaderCell>Wyświetlacz</TableHeaderCell>
                                                                <TableHeaderCell></TableHeaderCell>
                                                            </TableRow>
                                                        </TableHeader>
                                                        <TableBody>
                                                            <!-- Sprawdź, czy Type nie jest null -->
                                                            <TableRow>
                                                                <TableRowHeader>Typ</TableRowHeader>
                                                                <TableRowCell>@(string.IsNullOrEmpty(smartphone.Data.Display.Type) ? "-" : smartphone.Data.Display.Type)</TableRowCell>
                                                            </TableRow>
                                                            <!-- Sprawdź, czy Shape nie jest null -->
                                                            <TableRow>
                                                                <TableRowHeader>Kształt</TableRowHeader>
                                                                <TableRowCell>@(string.IsNullOrEmpty(smartphone.Data.Display.Shape) ? "-" : smartphone.Data.Display.Shape)</TableRowCell>
                                                            </TableRow>
                                                            <!-- Sprawdź, czy Size__inch nie jest null -->
                                                            <TableRow>
                                                                <TableRowHeader>Rozmiar (cal)</TableRowHeader>
                                                                <TableRowCell>@(smartphone.Data.Display.Size__inch.HasValue ? smartphone.Data.Display.Size__inch.Value.ToString() : "-")</TableRowCell>
                                                            </TableRow>
                                                            <!-- Sprawdź, czy Contrast_ratio nie jest null -->
                                                            <TableRow>
                                                                <TableRowHeader>Współczynnik kontrastu</TableRowHeader>
                                                                <TableRowCell>@(string.IsNullOrEmpty(smartphone.Data.Display.Contrast_ratio) ? "-" : smartphone.Data.Display.Contrast_ratio)</TableRowCell>
                                                            </TableRow>
                                                            <!-- Sprawdź, czy Brightness_cdm nie jest null -->
                                                            <TableRow>
                                                                <TableRowHeader>Jasność (cd/m²)</TableRowHeader>
                                                                <TableRowCell>@(smartphone.Data.Display.Brightness__cdm.HasValue ? smartphone.Data.Display.Brightness__cdm.Value.ToString() : "-")</TableRowCell>
                                                            </TableRow>
                                                            <!-- Sprawdź, czy Has_touchscreen nie jest null -->
                                                            <TableRow>
                                                                <TableRowHeader>Ekran dotykowy</TableRowHeader>
                                                                <TableRowCell>@(smartphone.Data.Display.Has_touchscreen.HasValue ? (smartphone.Data.Display.Has_touchscreen.Value ? "Tak" : "Nie") : "-")</TableRowCell>
                                                            </TableRow>
                                                            <!-- Sprawdź, czy Refresh_rate_hz nie jest null -->
                                                            <TableRow>
                                                                <TableRowHeader>Częstotliwość odświeżania (Hz)</TableRowHeader>
                                                                <TableRowCell>@(smartphone.Data.Display.Refresh_rate__hz.HasValue ? smartphone.Data.Display.Refresh_rate__hz.Value.ToString() : "-")</TableRowCell>
                                                            </TableRow>
                                                            <!-- Sprawdź, czy Pixel_density_ppi nie jest null -->
                                                            <TableRow>
                                                                <TableRowHeader>Gęstość pikseli (PPI)</TableRowHeader>
                                                                <TableRowCell>@(smartphone.Data.Display.Pixel_density__ppi.HasValue ? smartphone.Data.Display.Pixel_density__ppi.Value.ToString() : "-")</TableRowCell>
                                                            </TableRow>
                                                            <!-- Sprawdź, czy Resolution_pixels nie jest null -->
                                                            <TableRow>
                                                                <TableRowHeader>Rozdzielczość pikseli</TableRowHeader>
                                                                <TableRowCell>@(string.IsNullOrEmpty(smartphone.Data.Display.Resolution__pixels) ? "-" : smartphone.Data.Display.Resolution__pixels)</TableRowCell>
                                                            </TableRow>
                                                            <!-- Sprawdź, czy Fingerprint_resistant nie jest null -->
                                                            <TableRow>
                                                                <TableRowHeader>Odporność na odciski palców</TableRowHeader>
                                                                <TableRowCell>@(smartphone.Data.Display.Fingerprint_resistant.HasValue ? (smartphone.Data.Display.Fingerprint_resistant.Value ? "Tak" : "Nie") : "-")</TableRowCell>
                                                            </TableRow>
                                                            <!-- Sprawdź, czy Has_gorilla_glass nie jest null -->
                                                            <TableRow>
                                                                <TableRowHeader>Gorilla Glass</TableRowHeader>
                                                                <TableRowCell>@(smartphone.Data.Display.Has_gorilla_glass.HasValue ? (smartphone.Data.Display.Has_gorilla_glass.Value ? "Tak" : "Nie") : "-")</TableRowCell>
                                                            </TableRow>
                                                        </TableBody>
                                                    </Table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }


                                <!-- Wyświetlanie danych ogólnych -->
