@inject ViewModels.Smartphone.ISmartphoneViewModel viewModel
@using GadgetBlitzPZ.Models.Smartphone
@using GadgetBlitzPZ.Pages.Templates
@using System.Linq
@using Blazorise.Bootstrap
@using Blazorise.Icons.FontAwesome



﻿


@page "/smartphoneDetails/{id}"

<PageTitle>SmartphonDetails</PageTitle>

<Style></Style>

<div class="container-fluid mt-4 mb-4">
    <div class="row">
        <div class="col-md-8">
            <!-- Wyświetlanie danych jednego smartfona -->
            @if (viewModel.Smartphones.Any())
            {
                var smartphone = viewModel.Smartphones.FirstOrDefault();
                <div class="card custom-shadow">
                    <div class="card-body d-flex flex-column justify-content-between h-100">
                        <div class="d-flex align-items-center">
                            <div class="mr-3">
                              @if (smartphone.Urls != null && smartphone.Urls.Any())
													{
														<Animate Auto Animation="Animations.ZoomIn" Duration="TimeSpan.FromMilliseconds(5000)">
														<img src="@smartphone.Urls.First()" alt="Smartphone Image" style="max-width: 200px; max-height: 200px; object-fit: cover; object-position: center; border-radius: 3%;" />
														</Animate>
													}
                            </div>
                            <div class="card-body">
										<h5 class="card-title">@smartphone.Name</h5>
										<p class="card-text small">
											<strong>Ekran:</strong> @smartphone.Data.Display.Size__inch<br />
											<strong>Procesor:</strong> @smartphone.Data.Cpu.Type<br />
											<strong>System:</strong> @smartphone.Data.Software.Os<br />
											<strong>Pamięć:</strong> @smartphone.Data.Storage.Capacity__gb<br />

										</p>
									</div>
                        </div>
                    </div>
                    <!-- Wyświetlanie danych jednego smartfona -->
                    <div class="card custom-shadow">
                        <div class="card-body d-flex flex-column justify-content-between h-100">
                            <div class="d-flex align-items-center">
                                <div class="mr-3">
                                </div>
                                <div class="card-body">
                                    
                                </div>
                            </div>


                                <!-- Wyświetlanie danych baterii -->
                                @if (smartphone.Data.Battery != null)
                                {
                                    <div class="card custom-shadow">
                                        <div class="card-body d-flex flex-column justify-content-between h-100">
                                            <div class="d-flex align-items-center">
                                                <div class="mr-3">
                                                </div>
                                                <div class="card-body">
                                                    <Table Striped>
                                                        <TableHeader>
                                                            <TableRow>
                                                                <TableHeaderCell>Bateria</TableHeaderCell>
                                                                <TableHeaderCell></TableHeaderCell>
                                                            </TableRow>
                                                        </TableHeader>
                                                        <TableBody>
                                                            <!-- Sprawdź, czy Capacity__mAh nie jest null -->
                                                            <TableRow>
                                                                <TableRowHeader>Pojemność</TableRowHeader>
                                                                <TableRowCell>@(smartphone.Data.Battery.Capacity__mAh != null ? smartphone.Data.Battery.Capacity__mAh + " mAh" : "-")</TableRowCell>
                                                            </TableRow>
                                                            <!-- Sprawdź, czy Continuous_audio_playtime__h nie jest null -->
                                                            <TableRow>
                                                                <TableRowHeader>Ciągły czas odtwarzania dźwięku</TableRowHeader>
                                                                <TableRowCell>@(smartphone.Data.Battery.Continuous_audio_playtime__h != null ? smartphone.Data.Battery.Continuous_audio_playtime__h + " hours" : "-")</TableRowCell>
                                                            </TableRow>
                                                            <!-- Sprawdź, czy Continuous_video_playtime__h nie jest null -->
                                                            <TableRow>
                                                                <TableRowHeader>Ciągły czas odtwarzania wideo</TableRowHeader>
                                                                <TableRowCell>@(smartphone.Data.Battery.Continuous_video_playtime__h != null ? smartphone.Data.Battery.Continuous_video_playtime__h + " hours" : "-")</TableRowCell>
                                                            </TableRow>
                                                            <!-- Sprawdź, czy Technology nie jest null -->
                                                            <TableRow>
                                                                <TableRowHeader>Technologia</TableRowHeader>
                                                                <TableRowCell>@(string.IsNullOrEmpty(smartphone.Data.Battery.Technology) ? "-" : smartphone.Data.Battery.Technology)</TableRowCell>
                                                            </TableRow>
                                                        </TableBody>
                                                    </Table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }


                                <!-- Wyświetlanie danych aparatu -->
                                @if (smartphone.Data.Camera != null)
                                {
                                    <div class="card custom-shadow">
                                        <div class="card-body d-flex flex-column justify-content-between h-100">
                                            <div class="d-flex align-items-center">
                                                <div class="mr-3">
                                                </div>
                                                <div class="card-body">
                                                    <Table Striped>
                                                        <TableHeader>
                                                            <TableRow>
                                                                <TableHeaderCell>Aparat</TableHeaderCell>
                                                                <TableHeaderCell></TableHeaderCell>
                                                            </TableRow>
                                                        </TableHeader>
                                                        <TableBody>
                                                            <!-- Sprawdź, czy Camera_back__mp nie jest null -->
                                                            <TableRow>
                                                                <TableRowHeader>Aparat tylny</TableRowHeader>
                                                                <TableRowCell>@(smartphone.Data.Camera.Camera_back__mp != null ? smartphone.Data.Camera.Camera_back__mp + " MP" : "-")</TableRowCell>
                                                            </TableRow>
                                                            <!-- Sprawdź, czy Camera_front__mp nie jest null -->
                                                            <TableRow>
                                                                <TableRowHeader>Aparat przedni</TableRowHeader>
                                                                <TableRowCell>@(smartphone.Data.Camera.Camera_front__mp != null ? smartphone.Data.Camera.Camera_front__mp + " MP" : "-")</TableRowCell>
                                                            </TableRow>
                                                            <!-- Sprawdź, czy Camera_back_amount nie jest null -->
                                                            <TableRow>
                                                                <TableRowHeader>Ilość aparatów tylnych</TableRowHeader>
