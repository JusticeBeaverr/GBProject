                                                            <TableRow>
                                                                <TableRowHeader>Ilość aparatów przednich</TableRowHeader>
                                                                <TableRowCell>@(smartphone.Data.Camera.Camera_front_amount != null ? smartphone.Data.Camera.Camera_front_amount.ToString() : "-")</TableRowCell>
                                                            </TableRow>
                                                            <!-- Sprawdź, czy Camera_back_digital_zoom nie jest null -->
                                                            <TableRow>
                                                                <TableRowHeader>Cyfrowe powiększenie (tylny)</TableRowHeader>
                                                                <TableRowCell>@(smartphone.Data.Camera.Camera_back_digital_zoom != null ? smartphone.Data.Camera.Camera_back_digital_zoom.ToString() : "-")</TableRowCell>
